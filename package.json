{
  "name": "fast-mutex",
  "version": "2.0.0",
  "description": "Implementation of FastMutex for mutual exclusion locks using LocalStorage",
  "repository": "https://github.com/chieffancypants/fast-mutex",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/fast-mutex.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build"
  },
  "keywords": [
    "mutex",
    "fastmutex",
    "lock",
    "localstorage",
    "browser"
  ],
  "author": "chieffancypants",
  "license": "ISC",
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "node-localstorage": "^1.3.0",
    "prettier": "^2.0.5",
    "sinon": "^1.17.5",
    "tsdx": "^0.13.2",
    "tslib": "^2.0.1",
    "typescript": "^3.9.7",
    "uglify-js": "^2.7.3"
  },
  "dependencies": {
    "debug": "^2.2.0"
  },
  "husky": {
    "hooks": {
      "post-checkout": "if echo \"$HUSKY_GIT_PARAMS\" | grep -q \"1$\"; then npm ci; fi",
      "post-merge": "npm ci",
      "post-rebase": "npm i",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write 'src/**/*' 'test/**/*' 'README.md'",
      "tsdx lint"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
